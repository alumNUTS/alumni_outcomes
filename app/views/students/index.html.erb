<header class="mainheader">
  <div class="container">
      <div class='homebuttonDiv'>
        <% if logged_in? && request.fullpath != "/" && request.fullpath != "/login"%>
        <% if is_student? %>
          <%= link_to "Home", student_path(current_user), class: 'homebutton' %>
        <% else %>
          <%= link_to "Home", officer_path(current_user), class: 'homebutton' %>
        <% end %>
      <% end %>
    </div><!-- homediv -->
     <div class='logout'>
        <% if logged_in? %>
           <%= link_to "Logout", logout_path, method: "DELETE", class: 'logout' %>
        <% end %>
    </div><!-- logoutdiv -->
    <div class='center'>
        <%= image_tag "ALUMNUTS.svg", size: "400x180", class: 'mainlogo' %>
    </div><!-- image_div -->
  </div><!-- container_div -->
</header>
<div class="navbar">
  </div>


<h1>List of All Students</h1>

<%= form_tag(students_path, :method => "get", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], placeholder: "Name (case sensitive)" %>
    <button class="btn" type="submit"><i class="icon-search"></i>Search</button>
  </div>
<% end %>

<br>

<% @students.each do |student| %>
  <a href="/students/<%= student.id %>"><%= student.name %></a><br>
<% end %>



