<div class='signup_form'>


<h1>Student Sign-up Form</h1>
<ul>
  <% @student.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<%= form_for @student do |form| %>
  <div>
    <%= form.label :cohort_id %><br>
    <%= form.select(:cohort_id, options_from_collection_for_select(@cohorts, :id, :name), class: "formbox cohort", id: 'cohortbox') %>
  </div>
  <div class="cohort_error"></div>
  <%= render form %>


  <div class="actions">
    <%= form.submit 'Sign Up!', class: 'submit_edit' %>
    <%= form.submit "clear", :type => "reset", class: "clear" %>
  </div>
<% end %>

	</div>

